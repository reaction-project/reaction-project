section.container.grid-960
  .columns
    .column
      header.navbar
        section.navbar-section
          a.navbar-brand href=admin_root_path
            | re:Action
          a.btn.btn-link href=admin_issues_path Issues
          a.btn.btn-link href=admin_categories_path Categories
          a.btn.btn-link href=admin_action_items_path Action Items
        section.navbar-section
          - if signed_in?
            ' Signed in as:
            = current_user.email
            = button_to t('.sign_out'), sign_out_path, method: :delete, class: 'btn btn-sm ml-10'
          - else
            = link_to t('.sign_in'), sign_in_path
